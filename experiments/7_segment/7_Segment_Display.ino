/* * This code controls the 7-segment display */const byte pinA = 2;const byte pinB = 3;const byte pinC = 4;const byte pinD = 5;const byte pinE = 6;const byte pinF = 7;const byte pinG = 8;const byte pinDP = 9;const int DISPLAY_SIZE = 8;const byte segments[DISPLAY_SIZE] = {  pinA, pinB, pinC, pinD, pinE, pinF, pinG, pinDP};int index = 0;byte state = LOW;void setup() {  for (int i = 0; i < DISPLAY_SIZE; ++i) {    pinMode(segments[i], OUTPUT);  }}void loop() {  digitalWrite(segments[index], state);  ++index;  delay(150);    if (index == DISPLAY_SIZE) {    state = !state;    index = 0;  }}